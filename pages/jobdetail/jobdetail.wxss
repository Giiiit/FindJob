/* 模态框 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 40%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 10rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  margin: 32rpx;
  border:1rpx solid #ccc;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 0.8rem;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 0.8rem;
  line-height: 0.8rem;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 0.8rem;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  width:100%;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}


.btn-cancelC {
  width: 100%;
  color: #666;
  text-align: center;
}

.btn-confirm {
  width: 50%;
  color: #3CC51F;
  text-align: center;
}
.btn-cancel, .btn-confirm, .btn-cancelC, .btn-cancel::after, .btn-confirm::after, .btn-cancelC::after{
  border: none;
  border-radius: 0
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

