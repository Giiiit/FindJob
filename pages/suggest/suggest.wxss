page{
    background-color: #f0f0f0;
}
.sugitem{
  width: 730rpx;
  height: 80rpx;
  padding: 10rpx 0 10rpx 20rpx;
  border-bottom: 1rpx solid #ccc;
  background-color: #fff;
  vertical-align: middle;
}
.icon{
  float: left;
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 1rpx solid #eee;
}
.sugitem text{
  float: left;
  line-height: 80rpx;
  font-size: 0.8rem;
}
.sugitem:first-child{
  background-color: orange;
}
.sugitem:first-child text{
  color: #fff;
}
.sugitem>.money{
  float: right;
}
.sugitem text{
  margin-right: 20rpx;
}
.sugzoom{
  position: fixed;
  bottom: 0;
  width: 710rpx;
  padding: 20rpx;
  border-top: 1rpx solid #ccc;
  background-color: #fff;
}
.sugtitle{
  display: inline-block;
  width: 100%;
  text-align: center;
  font-size: 0.8rem;
  color: deeppink;
}

.inputView {  
  background-color: #fff;  
  line-height: 100rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #cccccc;
  vertical-align: top;
}
.mb-20 {
  margin-bottom: 20rpx;
}   
/*输入框*/  
.nameImage, .keyImage {  
  display: inline-block;
  margin-left: 20rpx;  
  margin-top: 45rpx;
  width: 30rpx;  
  height: 30rpx  
}  
  
.loginLab {  
  margin: 0 15rpx;  
  float: left;
  width: 100rpx;
  color: #545454;  
  font-size: 0.8rem;
  line-height: 100rpx;
}  
.inputText {  
  flex: block;  
  display: inline-block;
  height: 100rpx;
  width:580rpx;
  text-align: left; 
  font-size: 0.8rem;
  line-height: 100rpx;
}
.contractor{
  display: none;
  float: right;
  margin-right: 20rpx;
  margin-top: 10rpx;
  width: 80rpx;
  height: 80rpx;
}