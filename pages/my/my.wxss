page{
    background-color: #f0f0f0;
}
.yhbj, .info, .order{
    width: 100%;
}
.yhbj{
  position: relative;
}
.yhbj image{
    width: 100%;
}
.info{
    box-sizing: border-box;
    padding: 0 50rpx;
    position: absolute;
    top: 0;
    left: 0;
    text-align: center;
}
.info image{
  position: relative;
    display: block;
    width: 150rpx;
    height: 150rpx;
    margin: 20rpx auto;
    border: 2px solid #fff;
    border-radius: 50%;
    box-sizing: border-box;
    background-color: #fff;
}
.info image text{
  position: absolute;
  bottom: 0;
  left: 0;
  display: block;
  width: 100%;
  padding-bottom: 10rpx;
  color: #fff;
  background-color: rgba(100, 100, 100, 0.5);
  font-size: 0.6rem;
}
.info text{
    display: block;
    color: #fff;
    font-size: 0.8rem;
    white-space: nowrap;
    text-align: center;
}
.order{
  margin-top: 20rpx;
  background-color: #fff;
}
.orderItem{
    height: 90rpx;
    padding: 0 10rpx;
    border-bottom: 1px solid #eee;
    box-sizing: border-box;
}
.orderItem .pointer{
    width: 34rpx;
    height: 34rpx;
    margin-top: 28rpx;
}
.orderItem .icon{
    width: 50rpx;
    height: 50rpx;
    margin-top: 20rpx;
    float: left;
}
.orderItem text{
    font-size: 30rpx;
    line-height: 90rpx;
    margin-left: 30rpx;
}
.orderItem .pointer{
    float: right;
    transform: rotate(90deg);
}

