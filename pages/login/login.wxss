page{  
  height: 100%;  
}  
  
.container {  
  height: 100%;  
  display: flex;  
  flex-direction: column;  
  padding: 0;  
  box-sizing: border-box;  
  background-color: #f2f2f2  
}   
  
/*登录图片*/  
.login-icon{  
  flex: none;  
}  
.login-img{  
  width: 750rpx;  
}  
  
/*表单内容*/  
.login-from {  
  margin-top: 20rpx;  
  flex: auto;  
  width: 100%;
  height:100%;  
}  
  
.inputView {  
  background-color: #fff;  
  line-height: 120rpx;
  height: 120rpx;
  border-bottom: 1rpx solid #cccccc;
  vertical-align: top;
}
.inputView:last-child {
  border-bottom: none
}   
/*输入框*/  
.nameImage, .keyImage {  
  float: left;
  margin-top: 40rpx;
  margin-left: 20rpx;
  width: 40rpx;  
  height: 40rpx;
  line-height:120rpx;
}  
  
.loginLab {  
  margin: 0 15rpx;  
  float: left;
  width:100rpx;
  color: #545454;  
  font-size: 0.8rem;
  line-height: 120rpx;
}  
.inputText {
  display: inline-block;
  text-align: left;
  font-size: 0.8rem;
  height: 120rpx;
  line-height: 120rpx;
}
.inputText2{
  width: 550rpx;
}
.code{
  float: right;
  height: 58rpx;
  margin: 31rpx 10rpx;
  line-height: 58rpx;
}
/*按钮*/  
.loginBtnView {  
  width: 100%;  
  height: auto;  
  background-color: #f2f2f2;  
  margin-top: 0rpx;  
  margin-bottom: 0rpx;  
  padding-bottom: 0rpx;  
}  
  
.loginBtn {  
  width: 80%;  
  margin-top: 20rpx;  
}  